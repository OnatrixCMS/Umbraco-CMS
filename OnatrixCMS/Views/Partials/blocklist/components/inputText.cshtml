@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;

@{
    var uniqueName = Model?.Content.Value("uniqueName");
    var label = Model?.Content.Value("label");
    var placeholderText = Model?.Content.Value("placeholderText");
    var inputType = Model?.Content.Value("inputType");

    var isRequired = Model!.Content.Value<bool>("isRequired");
    var errorMessage = Model?.Content.Value<string>("errorMessage");

    string uniqueNameStr = uniqueName?.ToString() ?? string.Empty;
    var inputValue = ViewData[uniqueNameStr] as string ?? string.Empty;
}

<div id="_@uniqueName" class="form-input-group">
    <input type="hidden" name="isPhoneRequired" value="true" />
    <input type="hidden" name="isMessageRequired" value="true" />

    <input id="@uniqueName" name="@uniqueName" type="@inputType" value="@inputValue" placeholder="@placeholderText" class="form-input" required="@isRequired">

    <div class="error-container">
        <div id="error_@uniqueName" class="form-input-error">
            @errorMessage
        </div>
    </div>

</div>